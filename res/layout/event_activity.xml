<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header" >

        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt6"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lrn_eve_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/txt0"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/txt_pad" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_back" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:paddingRight="2dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_eve_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="Event Name : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt4" />

                <EditText
                    android:id="@+id/et_eve_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:maxLength="200"
                    android:padding="@dimen/txt0"
                    android:textSize="@dimen/txt4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt0"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_eve_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Event Date : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt4" />

                <EditText
                    android:id="@+id/et_eve_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:inputType="date"
                    android:padding="@dimen/txt0"
                    android:singleLine="true"
                    android:textSize="@dimen/txt4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt0"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_eve_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Event Time : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt4" />

                <EditText
                    android:id="@+id/et_eve_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:inputType="time"
                    android:padding="@dimen/txt0"
                    android:singleLine="true"
                    android:textSize="@dimen/txt4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt0"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_eve_decs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Event Description :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt4" />

                <EditText
                    android:id="@+id/et_eve_decs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:maxLength="1500"
                    android:padding="@dimen/txt0"
                    android:singleLine="false"
                    android:textSize="@dimen/txt4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lnr_img"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt2"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_eve_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_eve_save"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/txt7"
                    android:paddingRight="@dimen/txt7"
                    android:paddingTop="2dp"
                    android:text="Save" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>